# Production Environment Variables
# Copy this file to .env for production deployment

# Firebase Configuration (Production)
FIREBASE_API_KEY=your_production_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_production_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_production_project_id
FIREBASE_STORAGE_BUCKET=your_production_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_production_sender_id
FIREBASE_APP_ID=your_production_app_id
FIREBASE_MEASUREMENT_ID=your_production_measurement_id

# Admin Credentials (PRODUCTION - USE VERY STRONG PASSWORD!)
ADMIN_EMAIL=admin@yourcompany.com
ADMIN_PASSWORD=YourVeryStrongPassword123!@#$%

# AI API Keys (Production)
GEMINI_API_KEY=your_production_gemini_api_key
OPENROUTER_API_KEY=your_production_openrouter_api_key
HUGGINGFACE_API_KEY=your_production_huggingface_api_key

# GitHub Token (for auto-update)
GH_TOKEN=your_production_github_token

# Optional: Sentry for error tracking
SENTRY_DSN=your_sentry_dsn

# Optional: Analytics
GOOGLE_ANALYTICS_ID=your_ga_id
